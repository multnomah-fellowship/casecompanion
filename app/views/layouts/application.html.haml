!!! 5
%html
  %head
    %title MyAdvocate
    = csrf_meta_tags

    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1' }
    %link{ href: 'http://fonts.googleapis.com/css?family=Roboto:300,400,500,700', rel: 'stylesheet' }

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    .mdl-layout.mdl-layout--no-drawer-button
      .mdl-layout__header
        .mdl-layout__header-row
          = link_to 'MyAdvocate', root_url, class: 'mdl-layout-title app-title'

      .mdl-layout__content.app-container
        = yield
