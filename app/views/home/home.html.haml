.row
  .col.s11.offset-s1
    %h2.app-typography--header-1 Hello #{@current_user.email}
    %p
      You are logged in.

- if @current_user.is_admin?
  .row
    .col.s11.offset-s1
      Admin Options:
      - MailchimpCsvGenerator::CSVS.keys.each do |key|
        - range = @data_ranges.fetch(key)
        %p= link_to "Download #{key.titleize} Mailchimp CSV", mailchimp_csv_path(key)
        %p
          = t("home_logged_in.email_description.#{key}", start: range.min.to_date, end: range.max.to_date)

.row
  .col.s11.offset-s1
    = link_to 'Log Out', sessions_path, method: :delete
