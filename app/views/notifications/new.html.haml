.mdl-grid
  .mdl-cell.mdl-cell--12-col
    %h3 Send An Invitation
  = form_for @notification do |f|
    .mdl-cell.mdl-cell--12-col
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.text_field :phone_number, class: 'mdl-textfield__input'
        = f.label :phone_number, class: 'mdl-textfield__label' do
          Phone Number

    .mdl-cell.mdl-cell--12-col
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.text_field :first_name, class: 'mdl-textfield__input'
        = f.label :first_name, class: 'mdl-textfield__label' do
          First Name

    .mdl-cell.mdl-cell--12-col
      .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        = f.text_field :offender_sid, class: 'mdl-textfield__input'
        = f.label :offender_sid, class: 'mdl-textfield__label' do
          Offender SID

    .mdl-cell.mdl-cell--12-col
      = f.submit 'Create', class: 'mdl-button mdl-js-button mdl-button--raised'
