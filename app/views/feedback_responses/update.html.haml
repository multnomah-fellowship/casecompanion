- content_for :header do
  - if @feedback.page == 'vrn-experiment'
    %p= t('feedback_responses.header')
  - else
    = render_component 'logo'

- content_for :footer do
  - if @feedback.page == 'vrn-experiment'
    = image_tag 'seal_DA.png', width: '60', height: '61', class: 'app-feedback-footer__logo'
    = simple_format(t('feedback_responses.footer'), class: 'app-feedback-footer__text')
  - else
    %span
      = render_component 'logo'
      = t('footer.powered_by_html')

.row
  .col.s10.offset-s1
    %h1.app-typography--header-1 Thanks for your feedback!

    %p.app-typography--body-1
      Your feedback will help us deliver a better service to more people.

    %p.app-typography--body-1
      Thanks again!

    = maybe_render_back_button(@feedback)
