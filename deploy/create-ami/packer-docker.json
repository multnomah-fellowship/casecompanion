{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },

  "builders": [{
    "type": "docker",
    "image": "ubuntu:16.04",
    "commit": true
  }],

  "provisioners": [{
    "type": "ansible",
    "playbook_file": "ansible.yml",
    "extra_arguments": [
      "--extra-vars", "starts_without_sudo=yes"
    ]
  }],

  "post-processors": [[
    {
      "type": "docker-tag",
      "repository": "multnomah-fellowship/casecompanion",
      "tag": "latest"
    }
  ]]
}
