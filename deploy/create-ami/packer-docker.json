{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },

  "builders": [{
    "type": "docker",
    "image": "ubuntu:16.04",
    "commit": true
  }],

  "provisioners": [
    {
      "type": "shell",
      "inline": "test -e /usr/bin/sudo || (apt update && apt -y install sudo)"
    },
    {
      "type": "ansible",
      "playbook_file": "ansible.yml"
    }
  ],

  "post-processors": [[
    {
      "type": "docker-tag",
      "repository": "multnomah-fellowship/casecompanion",
      "tag": "latest"
    }
  ]]
}
